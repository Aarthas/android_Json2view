{
  "head": {
    "process": "AndroidLayout"
  },
  "template": {
    "view": "scrollView",
    "width": "match",
    "height": "match",
    "background": "#f6f6f6",
    "child": [
      {
        "view": "refreshBar"
      },
      {
        "view": "line"
      },
      {
        "name": "ver",
        "view": "verticalLayout",
        "width": "match",
        "height": "match",
        "gravity": "center",
        "textSize": "18",
        "textColor": "#fff",
        "child": [
          {
            "view": "TextView",
            "width": "250dp",
            "height": "100dp",
            "text": "从本地加载json文件渲染视图",
            "gravity": "center",
            "margin": "10",
            "background": "#ff03A9F4",
            "click": "jumpToActivity",
            "data": {
              "name": "com.avocarrot.json2view.sample.JsonFromLocalActivity"
            }
          },
          {
            "view": "TextView",
            "width": "250dp",
            "height": "100dp",
            "text": "从网络加载json文件渲染视图",
            "margin": "10",
            "gravity": "center",
            "background": "#ffF44336",
            "click": "jumpToActivity",
            "data": {
              "name": "com.avocarrot.json2view.sample.JsonFromNetActivity"
            }
          },
          {
            "view": "TextView",
            "width": "250dp",
            "height": "100dp",
            "text": "使用Yiew代码创建视图",
            "margin": "10",
            "gravity": "center",
            "background": "#ff4CAF50",
            "click": "jumpToActivity",
            "data": {
              "name": "com.avocarrot.json2view.sample.YiewCodeActivity"
            }
          },
          {
            "view": "TextView",
            "width": "250dp",
            "height": "100dp",
            "text": "自定义component 用法 \n与 click事件\n与 图片展示",
            "margin": "10",
            "gravity": "center",
            "background": "#fb9236",
            "click": "jumpToActivity",
            "data": {
              "name": "com.avocarrot.json2view.sample.FeatureActivity"
            }
          },
          {
            "view": "TextView",
            "width": "250dp",
            "height": "100dp",
            "text": "yiew虚拟节点的使用，更新虚拟节点，就能更新相应的view",
            "margin": "10",
            "gravity": "center",
            "background": "#d9Ff5858",
            "click": "jumpToActivity",
            "data": {
              "name": "com.avocarrot.json2view.sample.VirtualVNodeActivity"
            }
          },
          {
            "view": "TextView",
            "width": "250dp",
            "height": "100dp",
            "text": "head 的使用",
            "margin": "10",
            "gravity": "center",
            "background": "#d9Ff5858",
            "click": "jumpToActivity",
            "data": {
              "name": "com.avocarrot.json2view.sample.HeadComponentActivity"
            }
          }
        ]
      }
    ]
  }
}